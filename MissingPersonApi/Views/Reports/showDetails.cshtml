@model IEnumerable<MissingPersonApi.Models.Report>

@{
    ViewData["Title"] = "showDetails";
}


<div class="container">
    <div class="row">

        @foreach (var item in Model)
        {
            <div class="card" style="width:400px">
                <img class="card-img-top" src="https://media-eng.dhakatribune.com/uploads/2016/11/missing-2.jpg" alt="Card image" style="width:100%">
                <div class="card-body">
                    <h4 class="card-title">@Html.DisplayFor(modelItem => item.Ctitle)</h4>
                    <p class="card-text">@Html.DisplayFor(modelItem => item.Cdetail)</p>
                    <a href="#" class="btn btn-primary">Read More</a>
                </div>
            </div>

        }

    </div>

</div>

